@*
    Comentario: Vista parcial. Presentación de la página de inicio.
*@

@{
    var persona = new Persona { Nombre = "Ana de Armas", Edad = 33, Titulo = "Analista Programador" };

    string DevolverFecha()
    {
        var fecha = DateTime.Now;
        return fecha.ToLongDateString();
    }

    var aficiones = new List<string> { "Cine", "Música", "Deportes", "Viajar" };
}


<!-- Contenido principal -->
<div class="text-center">

    <!-- Ícono -->
    <i id="icono" class="bi bi-heart-fill display-3 text-danger mb-4"></i>

    <!-- Contenido principal -->
    <div class="container py-4 border rounded shadow-sm">
        <!-- Título principal -->
        <h1 class="display-4 text-center">@persona.Nombre</h1>
        <!-- Subtítulo -->
        <h2 class="display-5 text-center text-muted">@persona.Titulo</h2>
        <!-- Fecha -->
        <p class="text-center mt-3">
            <strong id="fecha">Hoy es @DevolverFecha()</strong>
        </p>
        <!-- Acceso basado en la edad -->
        @if (persona.Edad < 18)
        {
            <div class="alert alert-danger text-center my-4">
                <h4>Acceso denegado ❌</h4>
            </div>
        }
        else
        {
            <div class="text-center my-4">
                <button class="btn btn-success btn-lg">Acceso permitido ✨</button>
            </div>
        }
    </div>

    <!-- Imagen principal -->
    <div class="my-4">
        <img id="photo"
             src="~/images/ana.png"
             class="img-fluid rounded shadow-lg"
             alt="Ana de Armas" />
    </div>

    <!-- Lista de aficiones -->
    <div class="container">
        @foreach (var aficion in aficiones)
        {
            <p class="text-center mb-1">@aficion</p>
        }
    </div>
</div>


<!-- Imagen adicional -->
<div class="text-center my-5">
    <img id="imagen-dotnet"
         src="~/images/dotnet.png"
         class="img-fluid rounded"
         alt="C#" />
</div>


<!-- Sección de bienvenida -->
<div class="row justify-content-center text-center bg-primary">

    <div class="col col-md-7 seccion-bienvenida">

        <h1>Bienvenido a mi portafolio</h1>
        <p>
            Ana Celia de Armas Caso (La Habana, 30 de abril de 1988) es una
            actriz y modelo cubana nacionalizada española​ y estadounidense.
            Comenzó su carrera con 16 años en su país natal y pronto obtuvo
            un papel principal en el drama romántico hispanocubano "Una rosa
            de Francia" (2006). A la edad de 18 años, se mudó a Madrid y
            protagonizó series como la popular serie de suspenso "El internado"
            (2007-2010) y el drama histórico "Hispania, la leyenda" (2010-2012).
        </p>
        <p>
            Después de mudarse a Los Ángeles, De Armas tuvo papeles de habla
            inglesa en el thriller psicológico "Knock Knock" (2015), la
            comedia criminal "War Dogs" (2016), y tuvo un papel secundario en
            la película biográfica "Manos de piedra" (2016). Saltó a la fama
            con su papel de Joi, una proyección holográfica de IA en la película
            de ciencia ficción "Blade Runner 2049" (2017). Por su interpretación
            de la enfermera Marta Cabrera en la película de misterio "Knives
            Out" (2019), fue nominada al Globo de Oro a la mejor actriz de
            comedia o musical.
        </p>

    </div>

</div>
